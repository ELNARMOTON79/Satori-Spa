<aside class="w-80 bg-white shadow h-screen flex flex-col">
    <div class="flex items-center px-6 py-4">
        <img src="/images/logo.png" alt="Logotipo Satori Spa" class="h-12 w-12 rounded-full bg-[#F5EBDD] mr-2 object-cover">
        <div>
            <h1 class="font-bold text-lg text-[#5C4633]">SATORI SPA</h1>
            <span class="text-xs text-[#8C837B]">Panel de Secretaria</span>
        </div>
    </div>
    <nav class="mt-8 flex-1">
        <ul>
            {{#each sections}}
            <li>
                <a href="{{this.href}}" class="w-full flex items-center px-6 py-3 rounded-lg mb-2 focus:outline-none {{#if (eq ../active this.id)}}bg-[#80684B] text-white{{else}}text-[#5C4633] hover:bg-[#F5EBDD]{{/if}}">
                    {{#if this.iconClass}}
                        <i class="{{this.iconClass}} mr-2" aria-hidden="true"></i>
                    {{/if}}
                    <span>{{this.title}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
    </nav>
    <div class="px-6 py-4 border-t border-[#E0D5C5]">
        <a href="#" id="logoutBtn" data-href="/logout" class="w-full block text-center px-4 py-2 bg-[#F5EBDD] rounded-lg border border-[#E0D5C5] hover:bg-[#E9DCCB] focus:outline-none">
            <svg class="inline h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M17 16l4-4m0 0l-4-4m4 4H7"/></svg>
            Cerrar Sesión
        </a>
    </div>

    <!-- Modal de confirmación de cierre de sesión -->
    <div id="logoutModal" class="fixed inset-0 z-50 hidden items-center justify-center" aria-hidden="true" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" data-close-modal></div>
        <div class="bg-white rounded-lg shadow-lg max-w-sm w-full mx-4 z-10">
            <div class="px-6 py-4 border-b border-[#E0D5C5]">
                <h2 class="text-lg font-semibold text-[#5C4633]">Confirmar cierre de sesión</h2>
            </div>
            <div class="px-6 py-4">
                <p class="text-sm text-[#8C837B]">¿Estás seguro que deseas cerrar sesión?</p>
            </div>
            <div class="px-6 py-4 flex justify-end gap-3 border-t border-[#E0D5C5]">
                <button type="button" id="logoutCancel" class="px-4 py-2 bg-white border border-[#E0D5C5] rounded-lg text-[#5C4633] hover:bg-[#F5EBDD] focus:outline-none">Cancelar</button>
                <button type="button" id="logoutConfirm" class="px-4 py-2 bg-[#80684B] text-white rounded-lg hover:brightness-95 focus:outline-none">Cerrar sesión</button>
            </div>
        </div>
    </div>
</aside>

<script>
document.addEventListener('DOMContentLoaded', function () {
    var logoutBtn = document.getElementById('logoutBtn');
    var modal = document.getElementById('logoutModal');
    var cancelBtn = document.getElementById('logoutCancel');
    var confirmBtn = document.getElementById('logoutConfirm');
    var backdrop = modal ? modal.querySelector('[data-close-modal]') : null;

    function openModal() {
        if (!modal) return;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        modal.setAttribute('aria-hidden', 'false');
        // focus en el botón cancelar para accesibilidad
        cancelBtn && cancelBtn.focus();
    }

    function closeModal() {
        if (!modal) return;
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        modal.setAttribute('aria-hidden', 'true');
        logoutBtn && logoutBtn.focus();
    }

    if (logoutBtn) {
        logoutBtn.addEventListener('click', function (e) {
            e.preventDefault();
            openModal();
        });
    }

    if (cancelBtn) {
        cancelBtn.addEventListener('click', function () {
            closeModal();
        });
    }

    if (backdrop) {
        backdrop.addEventListener('click', function () {
            closeModal();
        });
    }

    if (confirmBtn) {
        confirmBtn.addEventListener('click', function () {
            var href = logoutBtn.getAttribute('data-href') || '/logout';
            window.location.href = href;
        });
    }

    // Cerrar con ESC
    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape' || e.key === 'Esc') {
            if (modal && !modal.classList.contains('hidden')) {
                closeModal();
            }
        }
    });
});
</script>
