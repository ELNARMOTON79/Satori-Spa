<div class="bg-gradient-to-b from-[#FFFDF9] to-[#FDFBF7] min-h-screen dashboard-text-brown">
    <style>
        .dashboard-text-brown, .dashboard-text-brown * { color: #5A3E2A !important; }
        /* Excepción: mantener el texto del botón PDF en blanco */
        .dashboard-text-brown a.pdf-btn, .dashboard-text-brown a.pdf-btn * { color: #ffffff !important; }
        /* Excepción adicional: respetar elementos que usan la utilidad "text-white" (sidebar activo, botones, etc.) */
        .dashboard-text-brown .text-white, .dashboard-text-brown .text-white * { color: #ffffff !important; }
    </style>
    <div class="flex">
        {{> admin_sidebar sections=sections active=active user=user}}

    <!-- Main Content -->
    <main class="flex-1 p-4 h-screen overflow-auto">

            <div class="container mx-auto mt-2 flex-1 overflow-hidden flex flex-col">
                <div class="bg-white p-8 rounded-lg shadow-lg">
                    <h1 class="text-2xl font-bold mb-4">Satori SPA te da la Bienvenida, 
                        {{#if user.nombre}}
                            {{user.nombre}}
                        {{else if user.displayName}}
                            {{user.displayName}}
                        {{else}}
                            {{user.email}}
                        {{/if}}
                    </h1>
                </div>
            </div>
            <div class="container mx-auto mt-2">
                <div class="bg-white p-8 rounded-lg shadow-lg">
                    <h2 class="text-xl font-bold mb-4"><i class="fa-solid fa-chart-simple mr-2"></i>Estadísticas Rápidas</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="bg-[#F5EBDD] p-4 rounded-lg text-center">
                            <h3 class="text-lg font-semibold mb-2"><i class="fa-solid fa-users mr-2"></i>Clientes Registrados</h3>
                            <p class="text-2xl font-bold">{{usuarios.length}}</p>
                        </div>
                        <div class="bg-[#F5EBDD] p-4 rounded-lg text-center">
                            <h3 class="text-lg font-semibold mb-2"><i class="fa-solid fa-spa mr-2"></i>Servicios Ofrecidos</h3>
                            <p class="text-2xl font-bold">{{servicios.length}}</p>
                        </div>
                        <div class="bg-[#F5EBDD] p-4 rounded-lg text-center">
                            <h3 class="text-lg font-semibold mb-2"><i class="fa-solid fa-calendar-days mr-2"></i>Citas Programadas</h3>
                                <p class="text-2xl font-bold"><span id="scheduledCount">--</span></p>
                        </div>
                    </div>
                </div>

                <div class="container mx-auto mt-2 flex-1 overflow-hidden">
                    <div class="bg-white p-8 rounded-lg shadow-lg flex-1">
                        <h2 class="text-xl font-bold mb-4"><i class="fa-solid fa-clipboard-list mr-2"></i>Informes</h2>

                        <!-- Quick report cards -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                            <div class="bg-[#F5EBDD] p-4 rounded-lg text-center">
                                <h3 class="text-lg font-semibold mb-2"><i class="fa-solid fa-calendar-check mr-2"></i>Citas Confirmadas</h3>
                                <p class="text-2xl font-bold" id="confirmedCount">--</p>
                            </div>
                            <div class="bg-[#F5EBDD] p-4 rounded-lg text-center">
                                <h3 class="text-lg font-semibold mb-2"><i class="fa-solid fa-calendar-xmark mr-2"></i>Citas Canceladas</h3>
                                <p class="text-2xl font-bold" id="canceledCount">--</p>
                            </div>
                            <div class="bg-[#F5EBDD] p-4 rounded-lg text-center">
                                <h3 class="text-lg font-semibold mb-2"><i class="fa-solid fa-calendar-days mr-2"></i>Total Citas</h3>
                                <p class="text-2xl font-bold" id="totalCount">--</p>
                            </div>
                        </div>

                        <!-- PDF report generator card -->
                        <div class="mb-6">
                            <div class="bg-white p-4 rounded-lg shadow flex items-center justify-between">
                                <div>
                                    <h3 class="font-semibold mb-1"><i class="fa-solid fa-file-pdf mr-2 text-red-500"></i>Generar informe PDF</h3>
                                    <div class="text-sm text-gray-600">Descarga un PDF con los informes importantes (resumen de clientes, servicios y citas).</div>
                                </div>
                                <div>
                                    <a href="/admin/reports/pdf" class="inline-block px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 pdf-btn">Generar PDF</a>
                                </div>
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="bg-white p-4 rounded-lg shadow">
                                <h3 class="font-semibold mb-2 text-center"><i class="fa-solid fa-chart-column mr-2 text-orange-500"></i>Citas creadas por semana</h3>
                                    <div class="text-sm text-gray-600 mb-3 text-center">Últimas 8 semanas</div>
                                <div class="h-40">
                                    <canvas id="weeklyCreatedChart" class="w-full h-full"></canvas>
                                </div>
                            </div>
                            <div class="bg-white p-4 rounded-lg shadow">
                                <h3 class="font-semibold mb-2 text-center"><i class="fa-solid fa-chart-line mr-2 text-orange-500"></i>Confirmadas vs Canceladas (por semana)</h3>
                                <div class="text-sm text-gray-600 mb-3 text-center">Comparativa por semana (últimas 8 semanas)</div>
                                <div class="h-40">
                                    <canvas id="weeklyStatusChart" class="w-full h-full"></canvas>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    (function(){
        var elScheduled = document.getElementById('scheduledCount');
        var elConfirmed = document.getElementById('confirmedCount');
        var elCanceled = document.getElementById('canceledCount');
        var elTotal = document.getElementById('totalCount');

        function normalize(s){ return (s||'').toString().toLowerCase(); }
        function safeText(node, text){ if(!node) return; node.textContent = text; }

        function parseDate(item){
            var v = item.fecha || item.date || item.created_at || item.createdAt || item.datetime || item.hora || null;
            if(!v) return null;
            var d = new Date(v);
            if(isNaN(d)){
                var n = Number(v);
                if(!isNaN(n)) d = new Date(n);
            }
            return isNaN(d) ? null : d;
        }

        function startOfWeek(date){
            var dt = new Date(date);
            var day = (dt.getDay()+6)%7; // Monday = 0
            dt.setDate(dt.getDate() - day);
            dt.setHours(0,0,0,0);
            return dt;
        }

        function fmtDate(d){
            var y = d.getFullYear();
            var m = ('0'+(d.getMonth()+1)).slice(-2);
            var day = ('0'+d.getDate()).slice(-2);
            return y + '-' + m + '-' + day;
        }

        fetch('/api/citas')
            .then(function(resp){ return resp.json().catch(function(){ return resp; }); })
            .then(function(data){
                var list = [];
                if(!data) list = [];
                else if(Array.isArray(data)) list = data;
                else if(Array.isArray(data.citas)) list = data.citas;
                else if(Array.isArray(data.appointments)) list = data.appointments;

                var pendingCount = 0;
                var confirmedCount = 0;
                var canceledCount = 0;
                var totalCount = list.length;

                function getStatus(item){ return normalize(item.estado || item.status || item.estado_cita || ''); }

                var weeksMap = Object.create(null);

                list.forEach(function(item){
                    var estado = getStatus(item);
                    if(estado.indexOf('pend') !== -1) pendingCount++;
                    if(estado.indexOf('conf') !== -1 || estado.indexOf('acept') !== -1) confirmedCount++;
                    if(estado.indexOf('cancel') !== -1 || estado.indexOf('anul') !== -1 || estado.indexOf('rech') !== -1) canceledCount++;

                    var d = parseDate(item);
                    if(!d) return;
                    var ws = startOfWeek(d);
                    var key = fmtDate(ws);
                    if(!weeksMap[key]) weeksMap[key] = { total:0, confirmed:0, canceled:0 };
                    weeksMap[key].total++;
                    if(estado.indexOf('conf') !== -1 || estado.indexOf('acept') !== -1) weeksMap[key].confirmed++;
                    if(estado.indexOf('cancel') !== -1 || estado.indexOf('anul') !== -1 || estado.indexOf('rech') !== -1) weeksMap[key].canceled++;
                });

                safeText(elScheduled, String(pendingCount));
                safeText(elConfirmed, String(confirmedCount));
                safeText(elCanceled, String(canceledCount));
                safeText(elTotal, String(totalCount));

                // Build last N weeks labels (N = 8)
                var N = 8;
                var now = new Date();
                var curWeek = startOfWeek(now);
                var weekStarts = [];
                for(var i = N-1; i >= 0; i--){
                    var w = new Date(curWeek);
                    w.setDate(w.getDate() - (7 * i));
                    weekStarts.push(w);
                }

                var labels = [];
                var totals = [];
                var confs = [];
                var cancels = [];

                weekStarts.forEach(function(w){
                    var key = fmtDate(w);
                    labels.push(key);
                    var v = weeksMap[key] || { total:0, confirmed:0, canceled:0 };
                    totals.push(v.total);
                    confs.push(v.confirmed);
                    cancels.push(v.canceled);
                });

                // Use brown/beige palette to match site (cards and sidebar)
                // - primary brown:  #8B6B4E (main bars)
                // - light beige:    #EFDCC8 (lighter accents / hover)
                // - dark brown:     #5A3E2A (borders and darker bars)
                var accent = '#CFB28C';
                var accentLight = '#EFDCC8';
                var accentDark = '#5A3E2A';
                var confirmColor = '#00CC00'; // secondary warm beige
                var cancelColor = '#F00000'; // slightly darker brown for contrast

                var ctx1 = document.getElementById('weeklyCreatedChart').getContext('2d');
                if(window.weeklyCreatedChart) try{ window.weeklyCreatedChart.destroy(); }catch(e){}
                window.weeklyCreatedChart = new Chart(ctx1, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Citas creadas',
                            data: totals,
                            backgroundColor: accent,
                            hoverBackgroundColor: accentLight
                        }]
                    },
                    options: { responsive:true, maintainAspectRatio:false, plugins:{legend:{position:'top'}}, scales:{ y:{ beginAtZero:true } } }
                });

                var ctx2 = document.getElementById('weeklyStatusChart').getContext('2d');
                if(window.weeklyStatusChart) try{ window.weeklyStatusChart.destroy(); }catch(e){}
                window.weeklyStatusChart = new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            { label: 'Confirmadas', data: confs, backgroundColor: confirmColor },
                            { label: 'Canceladas', data: cancels, backgroundColor: cancelColor }
                        ]
                    },
                    options: { responsive:true, maintainAspectRatio:false, plugins:{legend:{position:'top'}}, scales:{ y:{ beginAtZero:true } } }
                });

            })
            .catch(function(err){
                console.error('Error loading citas for dashboard reports', err);
                safeText(elScheduled,'0'); safeText(elConfirmed,'0'); safeText(elCanceled,'0'); safeText(elTotal,'0');
                if(window.weeklyCreatedChart) try{ window.weeklyCreatedChart.destroy(); }catch(e){}
                if(window.weeklyStatusChart) try{ window.weeklyStatusChart.destroy(); }catch(e){}
            });
    })();
</script>
